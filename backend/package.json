{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npx dotenv -e .env -- npx prisma generate",
    "start": "node dist/index.js",
    "dev": "cross-env PRISMA_CLIENT_ENGINE_TYPE=library npx dotenv -e .env -- npx prisma generate && node --watch --loader ts-node/esm src/index.ts",
    "test": "vitest",
    "test:integration": "vitest --config vitest.config.integration.ts",
    "test:performance": "cross-env RUN_PERF=1 vitest --config vitest.config.performance.ts",
    "migrate": "dotenv -e .env -- npx prisma migrate dev",
    "seed": "npx prisma db seed",
    "docs": "typedoc",
    "format": "prettier --write \"**/*.{js,ts,json,md}\""
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "swagger-ui-express": "^4.6.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^1.0.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "prettier": "^2.8.8",
    "prisma": "^6.18.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "url": "^0.11.4",
    "vitest": "^1.0.0"
  }
}
