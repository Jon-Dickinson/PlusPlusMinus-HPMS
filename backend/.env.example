# Example env for backend (do NOT commit real secrets)
# Copy this to `.env` and fill with real values for local dev.

# Postgres connection string. Example for local Postgres:
# DATABASE_URL="postgresql://user:password@localhost:5432/plusplus_dev?schema=public"
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/plusplus_dev?schema=public"

# JWT secret used for signing tokens (replace with a secure random value)
JWT_SECRET="replace_with_a_secure_base64_secret"

# Optional: other public keys / service keys
NEXT_PUBLIC_STACK_PROJECT_ID=
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=
STACK_SECRET_SERVER_KEY=
