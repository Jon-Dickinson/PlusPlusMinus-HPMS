{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npx dotenv -e .env -- npx prisma generate",
    "start": "node dist/index.js",
    "dev": "cross-env PRISMA_CLIENT_ENGINE_TYPE=library npx dotenv -e .env -- npx prisma generate && node --watch --loader ts-node/esm src/index.ts",
    "migrate": "dotenv -e .env -- npx prisma migrate dev",
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
